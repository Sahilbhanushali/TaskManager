# Backend environment configuration
NODE_ENV=development
PORT=5000
BASE_PATH=/api

# MongoDB connection string
MONGO_URI=mongodb://127.0.0.1:27017/taskmanager

# Session / cookie configuration
SESSION_SECRET=taskmanager_dev_session_secret
# 24 hours in milliseconds
SESSION_EXPIRES_IN=86400000

# OAuth configuration (set real values in non-local environments)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# Frontend origins allowed to talk to the API (comma separated)
FRONTEND_ORIGIN=http://localhost:5173,http://127.0.0.1:5173
FRONTEND_GOOGLE_CALLBACK_URL=http://localhost:5173/google/oauth/callback

